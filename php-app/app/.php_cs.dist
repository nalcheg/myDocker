<?php

$finder = PhpCsFixer\Finder::create()
    ->in(__DIR__)
    ->exclude('var')
;

return PhpCsFixer\Config::create()
    ->setRules([
        '@Symfony'               => true,
        '@PSR2'                  => true,
        'array_syntax'           => ['syntax' => 'short'],
        'concat_space'           => ['spacing' => 'one'],
        'binary_operator_spaces' => ['default' => null],
        'yoda_style'             => null,
    ])
    ->setFinder($finder)
;
